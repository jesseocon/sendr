<div class="row">
    <div class="span6 offset3">
        <h1>Don't have an account?</h1>
        <div style='width:50%;margin: 0 auto; padding-left:135px;padding-bottom:50px;'><%= link_to 'Sign up now!', signup_path, class: 'btn btn-success btn-large' %></div>
    </div><!-- end of span4 offset4 -->
    <div class="span6 offset3">
        <h1 class="sign-h">Snedit</h1>
        <h3 class="sign-h">Never miss an event.  Let us handle the most important events in your application.</h3>
    </div><!-- end span6 offset3 -->
</div><!-- end div row-->
<div class="row">
  <div class="span4 offset4">
      <%= form_tag sessions_path, class: 'form-vertical', id: 'sign-up' do %>
          <%= render 'shared/flash_messages' %>
          <%= text_field_tag :email, "", placeholder: 'Email', class: 'input-block-level input-medium' %>
          <%= password_field_tag :password, "", placeholder: 'Password', class: 'input-block-level input-medium' %>
          <button class="btn btn-primary fullwidth">Sign in!</button>
          <div class="field" id="remember-me">
              <%= check_box_tag :remember_me, 1, params[:remember_me] %>
              <%= label_tag :remember_me %>
              <p><%= link_to "Forgot password?", new_password_reset_path %></p>
          </div>
          <div class="actions"></div>
      <% end %>
  </div><!-- end span4 offset4 -->
</div><!-- end row-->